{
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/client.ts",
    "src/server.ts",
    "src/types/index.d.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": ["/src/*"],
  "exclude": ["./dist"]
}