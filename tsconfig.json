{
  "ts-node": {
    "files": true
  },
  "files": [
    "src/server.ts",
    "src/client.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": ["/src/**/*", "src/types/desc.d.ts"]
}
